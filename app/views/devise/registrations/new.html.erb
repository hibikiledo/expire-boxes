<div class="container-fluid landing">
  <section class="head">
    <div class="row">
      <div class="col-md-12">
        <%= image_tag "logo.jpg", class: 'img-responsive' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3 class="text-center">Expired Box Sign Up</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p class="text-center">Please fill the information below.</p>
      </div>
    </div>
  </section>
  <section class="problem">
    <div class="row register-form">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal custom-form'}) do |f| %>
          <%= devise_error_messages! %>
          <h1>Join now</h1>
          <div class="form-group">
            <div class="col-sm-4 label-column">
              <label class="control-label" for="email-input-field">Email </label>
            </div>
            <div class="col-sm-6 input-column">
              <%= f.email_field :email, class: 'form-control', autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-4 label-column">
              <label class="control-label" for="pawssword-input-field">Password </label>
            </div>
            <div class="col-sm-6 input-column">
              <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-4 label-column">
              <label class="control-label" for="repeat-pawssword-input-field">Repeat Password </label>
            </div>
            <div class="col-sm-6 input-column">
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
            </div>
          </div>
          <%= f.submit "Sign up", class: "btn btn-default submit-button" %>
        <% end %>
      </div>
    </div>
  </section>
</div>
