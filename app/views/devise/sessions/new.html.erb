<div class="container">
  <section class="sign-in">
    <div class="row">
       <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
          <h1>Expired Box</h1>
          <p>
            Expired Box stands for efficient uses of resources. We provide this service for <b>free</b>.
            It will always be free. Expired Box runs on money of the dev team. However, feel free to donate.
          </p>
          <h3>Welcome Back</h3>
          <p>
            We love you.
          </p>
          <%= render "dashboard/shared/flash" %>
       </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
          <label class="col-sm-4 col-lg-4 control-label">Email</label>
          <div class="col-sm-6 col-lg-8">
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
            <p class="help-block">Email registered with expired-box</p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 col-lg-4 control-label">Password</label>
          <div class="col-sm-6 col-lg-8">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 col-lg-4"></div>
          <div class="col-sm-6 col-lg-8input-column-plain">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %>
                  Remember me?
                </label>
              </div>
              <p class="help-block">Automatically sign in when revisit the site.</p>
            </div>
          </div>
        <div class="form-group">
          <div class="col-sm-4"></div>
          <div class="col-sm-6 input-column-plain">
            <%= f.submit "Log in", class: "btn btn-raised btn-primary" %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
