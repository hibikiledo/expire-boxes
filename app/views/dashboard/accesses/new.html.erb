<% breadcrumb :new_access, @box %>

<div class="container">
  <section class="boxes">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <h1>Share with</h1>
        <p>
          Share <b><%= @box.label %></b> with other people.
        </p>
        <%= render "dashboard/shared/flash" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form_for @access, url: {action: "create"} do |f| %>
          <div class="form-group label-static">
            <label class="control-label">Email</label>
            <%= text_field_tag 'access[email]', nil, class: 'form-control'%>
          </div>
          <div class="form-group label-static">
            <label class="control-label">Role</label>
            <hr>
            <div class="radio radio-primary">
              <label>
                <%= radio_button_tag 'access[role]', 'user' %>
                User (Only Add/Remove Items)
              </label>
            </div>
            <div class="radio radio-primary">
              <label>
                <%= radio_button_tag 'access[role]', 'owner' %>
                Owner (Full control)
              </label>
            </div>
          </div>
        <div>
          <%= f.submit "Share", class: "btn btn-raised btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
</div>
