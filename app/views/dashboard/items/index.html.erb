        <table class="table table-striped table-hover ">
          <thead>
          <tr>
            <th>#</th>
            <th>Item Name<br>Name (amount)</th>
            <th>Expire Date<br>yyyy-mm-dd</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @items.each_with_index do |item, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= item.label %> (<%= item.amount %>)</td>
                <td><%= item.expire_date %></td>
                <td>
                  <%= link_to '<i class="material-icons md-18 md-dark">edit</i>'.html_safe,
                              edit_dashboard_box_item_path(@box, item, mode: 'full'),
                              data: {toggle: 'modal', target: '#edit-item'}, remote: true %>
                </td>
              <tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>

<!-- fab btn -->
<div class="abs-fab">
  <a href="<%= new_dashboard_box_item_path(@box) %>" class="btn btn-info btn-fab">
    <i class="material-icons">add</i>
  </a>
</div>
