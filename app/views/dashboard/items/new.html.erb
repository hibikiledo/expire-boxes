<% breadcrumb :new_item, @box %>

<div class="container">
  <section class="boxes">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <h1>Add an Item</h1>
        <p>
          Add new item into <b><%= @box.label %></b>.
        </p>
        <%= render "dashboard/shared/flash" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form_for @item, url: {action: "create"} do |f| %>
            <div class="form-group label-static">
              <label class="control-label">Label</label>
              <%= f.text_field :label, class: "form-control", autocomplete: "off" %>
            </div>
            <div class="form-group label-static">
              <label class="control-label">Expire Date</label>
              <div class="input-group date" data-provide="datepicker" data-date-format="yyyy/mm/dd">
                <%= f.text_field :expire_date, class: "form-control", autocomplete: "off" %>
                <div class="input-group-addon">
                  <span class="glyphicon glyphicon-th"></span>
                </div>
              </div>
            </div>
            <div class="form-group label-static">
              <label class="control-label">Item Amount</label>
              <%= f.text_field :amount, class: "form-control", autocomplete: "off" %>
            </div>
            <div>
              <%= f.submit "Create", class: "btn btn-raised btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="row">

    </div>
  </section>
</div>
