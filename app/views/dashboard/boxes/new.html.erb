<div class="container">
  <section class="boxes">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <h1>Create a new box</h1>
        <p>
          Box is a top level container where items are stored.
        </p>
        <%= render "dashboard/shared/flash" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
        <%= form_for @box, url: {action: "create"} do |f| %>
        <div class="form-group label-static">
          <label class="control-label">Box Name</label>          
          <%= f.text_field :label, class: "form-control" %>          
        </div>
        <div>
          <%= f.submit "Create", class: "btn btn-raised btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      
    </div>
  </div>
</section>
</div>
