<%= form_for @box,
             url: dashboard_box_path(@box, dest: dashboard_boxes_path),
             method: :patch, remote: true do |f| %>

    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h4 class="modal-title"><%= @box.label %></h4>
        </div>
        <div class="modal-body">
          <div class="form-group label-static">
            <label class="control-label">Box Name</label>
            <%= f.text_field :label, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Delete",
                  dashboard_box_path(@box, @item, dest: "#{dashboard_boxes_path}"),
                  method: :delete, remote: true, class: "btn btn-raised btn-danger btn-modal" %>
          <%= f.submit "Save", class: "btn btn-primary btn-modal", style: "margin-bottom: 10px;" %>
        </div>
      </div>
    </div>

<% end %>
